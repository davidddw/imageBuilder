{
  "variables": {
    "build_name": "{{env `BUILD_NAME`}}",
    "build_version": "{{env `BUILD_VERSION`}}",
    "core": "4",
    "memory": "4096",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "8h",
    "iso_url": "http://172.16.2.254/Packer/cn_windows_server_2008_r2_standard_enterprise_datacenter_and_web_with_sp1_x64_dvd_617598.iso",
    "iso_md5": "bcbbce8d75d836777e864759c5b8cde0",
    "vm_name": "{{env `VM_NAME`}}"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}-{{user `build_version`}}",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_md5`}}",
      "iso_checksum_type": "md5",
      "output_directory": "disk",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "qemu_binary": "/usr/bin/qemu-kvm",
      "qemuargs": [
          [ "-m", "size={{user `memory`}}" ],
          [ "-smp", "4,sockets=2,cores={{user `core`}},threads=1" ],
          [ "-device", "virtio-net,netdev=user.0" ],
          [ "-device", "virtio-balloon-pci,id=balloon0,bus=pci.0" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `vm_name`}}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "Administrator",
      "ssh_password": "security421",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "floppy_files": [
        "http/Autounattend.xml",
        "scripts/*.bat",
        "scripts/*.ps1",
        "virtio/*"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/enable-rdp.bat",
        "./scripts/disable-auto-logon.bat"
      ]
    }
  ]
}
